---
interface Props {
    width?: string;
    height?: string;
}

const { width, height } = Astro.props;
---

<!--  -->
<svg
    xmlns="http://www.w3.org/2000/svg"
    width={width ?? "56"}
    height={height ?? "56"}
    viewBox="0 0 56 56"
    fill="none"
>
<defs>
    <linearGradient id="underlineGradient" x1="0%" y1="0%" x2="100%" y2="0%">
        <stop offset="0%" style="stop-color:#4C7FCB; stop-opacity:1" />
        <stop offset="98.77%" style="stop-color:#43BBFF; stop-opacity:1" />
    </linearGradient>
</defs>
    <circle cx="14" cy="14" r="14" fill="#629FFB" fill-opacity="0.35"></circle>
    <text
        x="18"
        y="18"
        font-family="Fira Sans"
        font-size="24"
        fill="#70A9FF"
        text-anchor="middle"
        dominant-baseline="middle">A</text
    >
    <text x="50" y="18" font-family="Fira Sans" font-size="24" fill="#FFFF" text-anchor="middle" dominant-baseline="middle">bout</text>
    <!-- Underline -->
    <rect x="5" y="35" width="60" height="5" rx="2.5" ry="2.5" fill="url(#underlineGradient)"></rect>
</svg>

<style></style>
